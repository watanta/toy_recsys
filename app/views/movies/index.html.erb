<div class="page-header">
  <h1>映画一覧</h1>
</div>
<div class="list-group">
  <% @movies.each do |movie| %>
    <%= link_to(movie, class: 'list-group-item') do %>
      <h4 class="list-group-item-heading">
        <%= movie.title %>
      </h4>
      <p class="list-group-item-text">
        <%= movie.genres %>
      </p>
    <% end %>
  <% end %>
  <%= paginate @movies %>
</div>